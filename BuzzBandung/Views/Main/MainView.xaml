                </controls:ExtendedFrame.BackgroundColor>
                <controls:ExtendedFrame.Margin>
                    <OnPlatform x:TypeArguments="Thickness" Android="16,40,16,16" iOS="16,36,16,16" />
                </controls:ExtendedFrame.Margin>
